<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_value_style"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="进度值"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/rg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_value_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableRight="@drawable/radiobutton_selector"
                android:text="居中"
                android:textColor="#666666" />

            <RadioButton
                android:id="@+id/rb_value_center_dial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableRight="@drawable/radiobutton_selector"
                android:text="居中+刻度值"
                android:textColor="#666666" />

            <RadioButton
                android:id="@+id/rb_value_outer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableRight="@drawable/radiobutton_selector"
                android:text="外部"
                android:textColor="#666666" />

            <RadioButton
                android:id="@+id/rb_value_outer_dial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableRight="@drawable/radiobutton_selector"
                android:text="外部+刻度值"
                android:textColor="#666666" />

            <RadioButton
                android:id="@+id/rb_value_inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableRight="@drawable/radiobutton_selector"
                android:text="内部"
                android:textColor="#666666" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>
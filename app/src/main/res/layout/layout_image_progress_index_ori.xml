<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="位置+方向"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/rg1_index_ori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_left_top_cw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableRight="@drawable/radiobutton_selector"
                android:text="左上+顺时针"
                android:textColor="#666666" />

            <RadioButton
                android:id="@+id/rb_left_top_ccw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableRight="@drawable/radiobutton_selector"
                android:text="左上+逆时针"
                android:textColor="#666666" />

            <RadioButton
                android:id="@+id/rb_left_bottom_cw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableRight="@drawable/radiobutton_selector"
                android:text="左下+顺时针"
                android:textColor="#666666" />

            <RadioButton
                android:id="@+id/rb_left_bottom_ccw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableRight="@drawable/radiobutton_selector"
                android:text="左下+逆时针"
                android:textColor="#666666" />

            <RadioButton
                android:id="@+id/rb_right_top_cw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableRight="@drawable/radiobutton_selector"
                android:text="右上+顺时针"
                android:textColor="#666666" />

            <RadioButton
                android:id="@+id/rb_right_top_ccw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableRight="@drawable/radiobutton_selector"
                android:text="右上+逆时针"
                android:textColor="#666666" />

            <RadioButton
                android:id="@+id/rb_right_bottom_cw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableRight="@drawable/radiobutton_selector"
                android:text="右下+顺时针"
                android:textColor="#666666" />

            <RadioButton
                android:id="@+id/rb_right_bottom_ccw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableRight="@drawable/radiobutton_selector"
                android:text="右下+逆时针"
                android:textColor="#666666" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>